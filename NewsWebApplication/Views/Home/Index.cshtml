@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE HTML>
<html lang="en">
    <head>
        <script src="/lib//jquery/dist/jquery.min.js"></script>
        <script src="/js/Home-index.js"></script>
        <link rel="stylesheet" href="~/css/Home-index.css" asp-append-version="true" />
        @*刷新*@
        <link rel="stylesheet" href="~/fonts/font_pc91p14nhe/iconfont.css" />
        @*向上*@
        <link rel="stylesheet" href="~/fonts/font_lgwa9q5jwc/iconfont.css" />
        <link rel="stylesheet" href="~/fonts/font_hoe6is2bej7/iconfont.css" />
        <link rel="stylesheet" href="~/fonts/font_t495264e78/iconfont.css" />
        <link rel="stylesheet" href="~/fonts/font_o0i0id7rif/iconfont.css" />
    </head>
    <body>
@*    <div class="text-center">
        <h1 class="display-4">Welcom</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>

