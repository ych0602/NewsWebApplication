    <div>
        <nav class="row mt-4">
            <div class="nav nav-tabs">
                <a class="nav-item nav-link active" data-toggle="tab" href="#home">今日要闻</a>
                <a class="nav-item nav-link disabled" data-toggle="tab" style="margin-left:auto" id="time"> </a>
            </div>
        </nav>

        @*导航下的整一个div*@
        <div class="content">
            <div class="left">
                <div class="CachartAndHeatList">
                    <div style="width:70%;height:400px;border-bottom-style:solid;border-color:rgb(239,239,239);display:flex">
                        <div class="Cachart_container">
                            <ul>
                                @for (int i = 0; i < ViewBag.PicNews.Count; i++)
                                {
                                    @if (i<5)
                                    {
                                        <li>
                                            <a href="/NewsPage/?Column=@ViewBag.PicNews[i].NewColumn&Id=@ViewBag.PicNews[i].NewId">
                                                <img src="~/@ViewBag.PicNews[i].NewPicture" alt="">
                                            </a>   
                                        </li>                                    
                                    }
                                }
@*                                <li>
                                    <img src="./1.png">
                                </li>
                                <li>
                                    <img src="./2.png">
                                </li>
                                <li>
                                    <img src="./3.png">
                                </li>
                                <li>
                                    <img src="./4.png">
                                </li>
                                <li>
                                    <img src="./5.png">
                                </li>*@
                            </ul>
                            <div class="ol_list">
                                <ol>
                                    <li class="current"></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                </ol>
                            </div>
                        </div>
                        <div class="Cachart_container_after">
                            @for (int i = 0; i < ViewBag.PicNews.Count; i++)
                            {
                                @if (i > 5 && i < 8)
                                {
                                    <div class="after_img">
                                        <a href="/NewsPage/?Column=@ViewBag.PicNews[i].NewColumn&Id=@ViewBag.PicNews[i].NewId">
                                            <img src="~/@ViewBag.PicNews[i].NewPicture" alt="">
                                        </a>
                                    </div>
                                }
                            }
                        </div>
                        
                    </div>

                    <div class="HeatList">
                        <div class="List">
                            <div class="Header">热点榜</div>
                                <ul>
                                @for (int i = 0; i < ViewBag.HeatNews.Count;i++)
                                {
                                    @if (i == 0)
                                    {
                                        <li><div class="rankIcon-num1">1</div><a href="/NewsPage/?Column=@ViewBag.HeatNews[i].Column&Id=@ViewBag.HeatNews[i].Id">@ViewBag.HeatNews[i].Title</a></li>
                                    } else if(i == 1){
                                        <li><div class="rankIcon-num2">2</div><a href="/NewsPage/?Column=@ViewBag.HeatNews[i].Column&Id=@ViewBag.HeatNews[i].Id">@ViewBag.HeatNews[i].Title</a></li>
                                    } else if(i == 2)
                                    {
                                        <li><div class="rankIcon-num3">3</div><a href="/NewsPage/?Column=@ViewBag.HeatNews[i].Column&Id=@ViewBag.HeatNews[i].Id">@ViewBag.HeatNews[i].Title</a></li>
                                    }else if(i <= 10)
                                    {
                                        <li><div class="rankIcon">@i</div><a href="/NewsPage/?Column=@ViewBag.HeatNews[i].Column&Id=@ViewBag.HeatNews[i].Id">@ViewBag.HeatNews[i].Title</a></li>
                                    }
                                }                    
                                </ul>
                        </div>
                    </div>
                </div>

                <div class="NewsList">
                    <div class="Header">
                        <div style="font-family:STKaiti;font-size:2vw;margin-top:-25px">热点精选</div>
                    </div>
                    <div class="List">
                        <ul>
                            @if (ViewBag.RecommNews != null)
                            {
                                @foreach (var item in ViewBag.RecommNews)
                                {
                                    <a href="/NewsPage/?Column=@item.NewColumn&Id=@item.NewId">
                                    <li>
                                        <div class="NewsImg">
                                            <img src="~/@item.NewPicture">
                                        </div>
                                        <div class="News">
                                            <div class="Title">@item.NewTitle</div>
                                            <div class="Description">@item.NewContent</div>
                                            <div class="Bottom">
                                                <div class="PulishTime">@item.NewDate</div>
                                                <div class="Share">
                                                    <i class="iconfont">&#xe624</i>
                                                    <span>分享</span>
                                                </div>
                                                <div class="Views">
                                                    <i class="iconfont">&#xe627</i>
                                                    <span>@item.NewHeat</span>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                    </a>
                                }
                            }
                            <li><div class="rankIcon-num2">2</div><a href="#">水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水</a></li>
                            <li><div class="rankIcon-num3">3</div><a href="#">江泽民伟大光辉的一生</a></li>
                            <li><div class="rankIcon">4</div><a href="#">江泽民伟大光辉的一生</a></li>
                            <li><div class="rankIcon">5</div><a href="#">江泽民伟大光辉的一生</a></li>
                            <li style="border-bottom-style:none;"><div class="rankIcon">10</div><a href="#">江泽民伟大光辉的一生</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="right">
                <div class="fixed-bar">
                    <a class="item refresh" onclick="javascript:location.reload();"><i class="iconfont">&#xe641</i><span>刷新</span></a>
                    @if (ViewData["UserName"] != null)
                    {
                        <a class="item" onclick="feedback()"><span class="txt" style="display:block;margin-top:10px">用户<br>反馈</span></a>
                    }
                    <a class="item" href="#"><i class="iconfont" style="display:block;padding-top:15px">&#xe62c</i></a>
                </div>
            </div>
        </div>
    </div>


    </body>
</html>